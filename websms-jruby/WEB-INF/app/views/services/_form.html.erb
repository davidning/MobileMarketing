<div class="row-fluid">
	<%= form_for(@service, :html => {:class => "form-horizontal"}) do |f| %>
	  <% if @service.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

		  <ul>
		  <% @service.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		  <% end %>
		  </ul>
		</div>
	  <% end %>

	  <fieldset>
		  <div class="control-group">
			<%= f.label :gw_id, '网关通道', :class => "control-label" %>
			<div class="controls">
				<%= f.collection_select :gw_id, SmsGateway.all, :id, :name, {:prompt => "请选择一个通道"} %>
			</div>
		  </div>
		  <div class="control-group">
			<%= f.label :service_id, '业务代码', :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :service_id, :class => "span4" %>
			</div>
		  </div>
		  <div class="control-group">
			<%= f.label :spnumber, '服务号码', :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :spnumber, :class => "span4" %>
			</div>
		  </div>
		  <div class="control-group">
			<%= f.label :feetype, '计费类型', :class => "control-label" %>
			<div class="controls">
				<%= f.select :feetype, Service::FEE_TYPES, :prompt => "选择计费类型" %>
			</div>
		  </div>
		  <div class="control-group">
			<%= f.label :feecode, '计费费率', :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :feecode, :class => "span4" %>
			</div>
		  </div>
		  <div class="control-group">
			<%= f.label :default, '设为默认', :class => "control-label" %>
			<div class="controls">
				<%= f.check_box :default %>
			</div>
		  </div>

		  <div class="actions">
			<%= f.submit "提交", :class=>"btn btn-primary" %>
			<%= link_to '返回', services_path, :class=>"btn" %>
		  </div>
		  
		</fieldset>
	<% end %>
</div>