<% content_for :title do %>
	<%= "我的个人资料" %>
<% end %>

<div class="row-fluid">
	<h2>个人资料 <small></small> </h2>
</div>

<% if notice %>
<div class="row-fluid">
	<div class="alert">
		<p id="notice"><%= notice %></p>
	</div>
</div>	
<% end %>

<div class="row-fluid">
	<div class="span1"><span>用户名:</span></div>
	<div class="span2"><span class="label label-info"><%= @user.name %></span></div>
	<div class="span1"><span>创建时间:</span></div>
	<div class="span2"><span class="label label-success"><%= @user.created_at %></span></div>
</div>

<div class="row-fluid">
	<div class="span1"><span>扩展号码:</span></div>
	<div class="span2"><span class="label label-success"><%= @user.extcode %></span></div>
	<div class="span1"><span>余额:</span></div>
	<div class="span2"><span class="label label-success"><%= @user.tavailable %></span></div>
</div>

<h3>最近发送</h3>
<div class="row-fluid">
	<div class="span1"><span>今天:</span></div>
	<div class="span2"><span class="label label-success"><%= Submit.lastday(@current_user) %></span></div>
	<div class="span1"><span>最近一周:</span></div>
	<div class="span2"><span class="label label-success"><%= Submit.lastweek(@current_user) %></span></div>
	<div class="span1"><span>最近一月:</span></div>
	<div class="span2"><span class="label label-success"><%= Submit.lastmonth(@current_user) %></span></div>
	<div class="span1"><span>全部:</span></div>
	<div class="span2"><span class="label label-success"><%= Submit.lastyear(@current_user) %></span></div>
</div>